<Window x:Class="RumahSakit.View.DasboardAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RumahSakit.View"
        mc:Ignorable="d"
        Title="DasboardAdmin" Height="588" Width="1123.333" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <TabControl>
        <TabItem Header="Dokter">
            <Grid Background="White">
                <DataGrid Name="dgDokter" HorizontalAlignment="Left" Height="529" VerticalAlignment="Top" Width="774" Margin="-2,0,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"/>
                        <DataGridTextColumn Header="Nama"/>
                        <DataGridTextColumn Header="Email"/>
                        <DataGridTextColumn Header="Jenis Kelamin"/>
                        <DataGridTextColumn Header="Alamat"/>
                        <DataGridTextColumn Header="No Telp"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Background="#00C853" HorizontalAlignment="Left" Height="529" Margin="774,0,0,0" VerticalAlignment="Top" Width="335">
                </Grid>

            </Grid>
        </TabItem>
        <TabItem Header="Perawatan">
            <Grid Background="White">
                <DataGrid Name="dgPerawat" HorizontalAlignment="Left" Height="529" VerticalAlignment="Top" Width="774" Margin="-2,0,0,0">

                </DataGrid>
                <Grid Background="#00C853" HorizontalAlignment="Left" Height="529" Margin="774,0,0,0" VerticalAlignment="Top" Width="335">
                </Grid>

            </Grid>
        </TabItem>
        <TabItem Header="Pasien">
            <Grid Background="White">
                <DataGrid AutoGenerateColumns="False" Name="dgPasien" HorizontalAlignment="Left" Height="529" VerticalAlignment="Top" Width="774" Margin="-2,0,0,0" SelectionChanged="dgPasien_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="50" Binding="{Binding PATIENT_ID}"/>
                        <DataGridTextColumn Header="Nama" Width="180" Binding="{Binding NAME}"/>
                        <DataGridTextColumn Header="Tanggal Lahir" Width="100" Binding="{Binding BIRTH}"/>
                        <DataGridTextColumn Header="Alamat" Width="200" Binding="{Binding ADDRESS}"/>
                        <DataGridTextColumn Header="No Telp" Width="100" Binding="{Binding PHONE}"/>
                        <DataGridTextColumn Header="Umur" Width="50" Binding="{Binding AGE}"/>
                        <DataGridTextColumn Header="Jenis Kelamin" Width="90" Binding="{Binding GENDER}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Background="#00C853" HorizontalAlignment="Left" Height="529" Margin="774,0,0,0" VerticalAlignment="Top" Width="335">
                    <Label Content="Nama" HorizontalAlignment="Left" Margin="71,115,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
                    <Label Content="Tanggal Lahir" HorizontalAlignment="Left" Margin="26,151,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.36,1.974" FontSize="14" Foreground="White"/>
                    <Label Content="Alamat" HorizontalAlignment="Left" Margin="65,185,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
                    <Label Content="No Telp" HorizontalAlignment="Left" Margin="65,224,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
                    <Label Content="Umur" HorizontalAlignment="Left" Margin="74,262,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
                    <Label Content="Jenis Kelamin" HorizontalAlignment="Left" Margin="29,293,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
                    <TextBox Name="txtNamaP" HorizontalAlignment="Left" Height="25" Margin="129,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" BorderThickness="0"/>
                    <TextBox Name="txtAlamatP" HorizontalAlignment="Left" Height="25" Margin="129,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" BorderThickness="0"/>
                    <TextBox Name="txtTelpP" HorizontalAlignment="Left" Height="25" Margin="129,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" BorderThickness="0"/>
                    <TextBox Name="txtUmurP" HorizontalAlignment="Left" Height="25" Margin="129,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" BorderThickness="0"/>
                    <DatePicker Name="dtTanggalLahirP" HorizontalAlignment="Left" Margin="129,154,0,0" VerticalAlignment="Top" Width="155" BorderThickness="0"/>
                    <RadioButton Name="rbLaki" Content="Laki-laki" HorizontalAlignment="Left" Margin="129,301,0,0" VerticalAlignment="Top" BorderThickness="0" Foreground="White"/>
                    <RadioButton Name="rbPerempuan" Content="Perempuan" HorizontalAlignment="Left" Margin="205,301,0,0" VerticalAlignment="Top" BorderThickness="0" Foreground="White"/>
                    <Button Name="btnTambah" Content="Tambah" HorizontalAlignment="Left" Margin="37,345,0,0" VerticalAlignment="Top" Width="75" Height="29" Foreground="#FF00C853" Background="White" BorderThickness="0" Click="btnTambah_Click"/>
                    <Button Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="123,345,0,0" VerticalAlignment="Top" Width="75" Height="29" Background="White" Foreground="#FF00C853" BorderThickness="0" Click="btnEdit_Click"/>
                    <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="209,345,0,0" VerticalAlignment="Top" Width="75" Height="29" Foreground="#FF00C853" Background="White" BorderThickness="0" Click="btnDelete_Click"/>
                    <Label Name="tempJK" Content="" HorizontalAlignment="Left" Margin="284,498,0,0" VerticalAlignment="Top"/>

                </Grid>

            </Grid>
        </TabItem>
        <TabItem Header="Obat">
            <Grid Background="White">
                <DataGrid Name="dgObat" HorizontalAlignment="Left" Height="529" VerticalAlignment="Top" Width="774" Margin="-2,0,0,0"/>
                <Grid Background="#00C853" HorizontalAlignment="Left" Height="529" Margin="774,0,0,0" VerticalAlignment="Top" Width="335">
                </Grid>

            </Grid>
        </TabItem>
    </TabControl>
</Window>
    
    
